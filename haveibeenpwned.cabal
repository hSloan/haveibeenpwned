cabal-version:       2.2
name:                haveibeenpwned
version:             0.1.0.0
synopsis:            Library for checking for weak/compromised passwords.
description:         This library uses the haveibeenpwned database to check for weak or compromised passwords.
bug-reports:         https://github.com/obsidiansystems/haveibeenpwned/issues
license:             BSD-3-Clause
license-file:        LICENSE
author:              Obsidian Systems
maintainer:          robert.klotzner@gmx.at
copyright:           2019 Obsidian Systems LLC
category:            Web
extra-source-files:  CHANGELOG.md
tested-with:
  GHC  ==8.6.5

library
  exposed-modules:     HaveIBeenPwned
  build-depends:
    base                                                 ,
    bytestring                        >= 0.10.8 && < 0.11,
    cryptohash                        >= 0.11.9 && < 0.12,
    data-default                      >= 0.7.1 && < 0.8,
    http-client                                        ,
    text                              >= 1.2.3 && < 1.3,
    mtl                               >= 2.2.2 && < 2.3,
    http-types                                         ,
    http-client-tls                   >= 0.3.5 && < 0.4,
    monad-logger                                        ,
    safe                              >= 0.3.17 && < 0.4,
  hs-source-dirs:      src
  default-language:    Haskell2010

source-repository head
  type: git
  location: https://github.com/obsidiansystems/haveibeenpwned


